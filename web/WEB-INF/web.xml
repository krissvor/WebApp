        <servlet-name>WebappServlet</servlet-name>
        <url-pattern>/inspectUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WebappServlet</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>WebappServlet</servlet-name>
        <url-pattern>/book</url-pattern>
